# Environment konfigurace pro Podlahy Zapletal

# CDN nastavení
CDN_BASE_URL=https://storage.googleapis.com/podlahy-zapletal-images
GCS_BUCKET_URL=https://storage.googleapis.com/podlahy-zapletal-images

# Google Cloud nastavení
GOOGLE_CLOUD_PROJECT_ID=podlahy-web
GOOGLE_CLOUD_REGION=europe-west1

# Production/Development
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://podlahyzapletal.cz

# EmailJS konfigurace (POVINNÉ pro kontaktní formulář)
# Získejte klíče na: https://www.emailjs.com/
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id_here
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id_here
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key_here

# Monitorování (volitelné)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id